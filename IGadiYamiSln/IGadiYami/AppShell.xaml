<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IGadiYami.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IGadiYami.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="IGadiYami">

    <ShellContent
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="SettingsPage" />

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:HomePageView}"
            Route="homepage" />
        <ShellContent
            Title="Guides"
            Icon="manual.png"
            ContentTemplate="{DataTemplate local:StartGardeningPage}"
            Route="startgardening" />
        <ShellContent
            Title="Camera"
            Icon="camera.png"
            ContentTemplate="{DataTemplate local:CameraPage}"
            Route="aicamera" />
        <ShellContent
            Title="Community"
            Icon="group.png"
            ContentTemplate="{DataTemplate local:CommunityPage}"
            Route="communitypage" />
        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate local:SettingsPage}"
            Route="settingpage" />
    </TabBar> 
</Shell>
