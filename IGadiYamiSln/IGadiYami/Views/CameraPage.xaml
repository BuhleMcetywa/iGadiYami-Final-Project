<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="IGadiYami.Views.CameraPage"
             Title="CameraPage">
    <VerticalStackLayout Spacing="25" Padding="30, 0" VerticalOptions="Fill" HorizontalOptions="Fill">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <cv:CameraView x:Name="CameraView" WidthRequest="300" HeightRequest="300" CamerasLoaded="CameraView_CamerasLoaded"/>
        <Button Text="Smile" Clicked="Button_Clicked" />
        <Image x:Name="myImage" WidthRequest="200" HeightRequest="200" />
    </VerticalStackLayout>
</ContentPage>