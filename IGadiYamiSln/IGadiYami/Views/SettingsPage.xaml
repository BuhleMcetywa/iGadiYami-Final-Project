<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:IGadiYami.ViewModels"
             x:Class="IGadiYami.Views.SettingsPage"
             BackgroundColor="#006838">

    <ContentPage.BindingContext>
        <vm:SettingsProfileViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10" Spacing="10">
        <Frame Padding="10" BackgroundColor="Transparent" CornerRadius="10" HasShadow="False" BorderColor="Transparent">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                <!-- Profile Picture -->
                <Image Source="ndosi.png" HeightRequest="150" WidthRequest="300" />

                <!-- Name and Location -->
                <Label Text="{Binding User.Name}" FontSize="20" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" />
                <Label Text="{Binding User.Location}" FontSize="15" TextColor="Black" HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <StackLayout Spacing="70">
            <Button Text="Upgrade To Premium" WidthRequest="250" FontSize="15" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding EditProfileCommand}" CornerRadius="100"/>
        
        </StackLayout>
 

        <StackLayout Spacing="20">
            <Button Text="Privacy" FontSize="20" WidthRequest="300" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding EditProfileCommand}" CornerRadius="100" />
            <Button Text="Help and Support" FontSize="20" WidthRequest="300" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding PremiumTabCommand}" CornerRadius="100" />
            <Button Text="Settings" FontSize="20" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding PremiumTabCommand}"  WidthRequest="300" CornerRadius="100"/>
            <Button Text="About Us" FontSize="20" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding PremiumTabCommand}" WidthRequest="300" CornerRadius="100"   />
            <Button Text="Terms and Conditions" FontSize="20" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding PremiumTabCommand}"  WidthRequest="300" CornerRadius="100"/>
            <Button Text="Logout" FontSize="20" TextColor="Black" BackgroundColor="#f8f2cc" Command="{Binding PremiumTabCommand}"  WidthRequest="300" CornerRadius="100"/>
        </StackLayout>


        
    </StackLayout>
</ContentPage>