<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IGadiYami.Views.CropTrackingFeaturePage"
             Title="CropTrackingFeaturePage">
    
    <VerticalStackLayout>
        <StackLayout>
            <Frame BorderColor="Black" HeightRequest="100">
                <Label Text="Crop Tracking" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>
        </StackLayout>
        
        <!-- Tracked Crops -->
        <StackLayout Margin="20, 50,20,0">
            <Frame BorderColor="Black" HeightRequest="800">
                <StackLayout>
                    <Frame HeightRequest="80">
                        <Label Text="Tomatoes"  VerticalOptions="Center"/>
                    </Frame>
                </StackLayout>
            </Frame>
        </StackLayout>
        
        <!-- Add Crop Button -->
        <StackLayout Margin="20">
            <Frame>
                <Button VerticalOptions="Center" HorizontalOptions="End" Text="Add Crop" />
            </Frame>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>